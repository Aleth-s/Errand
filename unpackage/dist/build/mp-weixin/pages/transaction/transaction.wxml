<view class="forum"><block wx:for="{{info}}" wx:for-item="r" wx:for-index="index" wx:key="index"><view class="post"><view class="post-header"><view class="post-title">{{r.title}}</view><view class="post-weight">{{"重量:"+r.otherinfo}}</view><view class="post-date">{{r.time}}</view></view><view class="post-author"><image class="user-icon" src="/static/user-icon.png"></image><view class="username">{{r.username}}</view><view class="post-price">{{r.price+"¥"}}</view></view><view class="line"><view class="line-content"><image style="width:180rpx;" src="{{r.avator}}" mode="widthFix"></image></view></view><view class="post-content">{{r.content}}</view><button data-event-opts="{{[['tap',[['wantToTrade',['$0'],[[['info','',index]]]]]]]}}" class="want-trade-button" bindtap="__e">想要交易</button></view></block><button data-event-opts="{{[['tap',[['submitPost',['$event']]]]]}}" class="submit-button" bindtap="__e">发布物品</button><block wx:if="{{showReplyWindow}}"><view class="reply-window"><view data-event-opts="{{[['tap',[['closeReplyWindow',['$event']]]]]}}" class="reply-overlay" bindtap="__e"></view><view class="reply-content"><textarea placeholder="请输入回复内容" data-event-opts="{{[['input',[['__set_model',['','replyContent','$event',[]]]]]]}}" value="{{replyContent}}" bindinput="__e"></textarea><button data-event-opts="{{[['tap',[['submitReply',['$event']]]]]}}" bindtap="__e">提交回复</button></view></view></block><block wx:if="{{showReplyInfo}}"><view class="reply-info"><view data-event-opts="{{[['tap',[['closeReplyInfo',['$event']]]]]}}" class="reply-overlay" bindtap="__e"></view><block wx:for="{{replies}}" wx:for-item="reply" wx:for-index="index" wx:key="index"><view><view class="replyinfo-content"><view class="post-title">{{reply.content}}</view><view class="post-date">{{reply.time}}</view></view></view></block></view></block></view>