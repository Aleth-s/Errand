    <select id="selectAll" resultType="com.example.entity.Reply">
        select
        <include refid="Base_Column_List" />
        from reply
        <where>
            <if test="userId !=null"> and user_id = #{userId} </if>
        </where>
        order by id asc
    </select>

    <select id="selectById" resultType="com.example.entity.Reply">
        select
        <include refid="Base_Column_List" />
        from forum
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from forum
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Reply" useGeneratedKeys="true">
        insert into forum
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="title != null">title,</if>
            <if test="content != null">content,</if>
            <if test="userId != null">user_id,</if>
            <if test="time != null">time,</if>
            <if test="otherinfo != null">otherinfo,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="title != null">#{title},</if>
            <if test="content != null">#{content},</if>
            <if test="userId != null">#{userId},</if>
            <if test="time != null">#{time},</if>
            <if test="otherinfo != null">#{otherinfo},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Reply">
        update records
        <set>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="money != null">
                money = #{money},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>