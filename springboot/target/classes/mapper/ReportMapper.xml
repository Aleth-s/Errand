<!--        from records-->
<!--        <where>-->

<!--        </where>-->
<!--        order by id desc-->
<!--    </select>-->
    <select id="selectAll" resultType="com.example.entity.Report">
        select
        report.*,user.username as userName,user.name as name,orders.order_no as No
        from report
        left join user
        on report.target_id = user.id
        left join orders
        on report.order_id= orders.id
        order by id asc
    </select>

    <select id="selectById" resultType="com.example.entity.Report">
        select
        <include refid="Base_Column_List" />
        from report
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from report
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Report" useGeneratedKeys="true">
        insert into report
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="content != null">content,</if>
            <if test="userId != null">user_id,</if>
            <if test="targetId != null">target_id,</if>
            <if test="time != null">time,</if>
            <if test="otherinfo != null">otherinfo,</if>
            <if test="type != null">type,</if>
            <if test="orderId != null">order_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="content != null">#{content},</if>
            <if test="userId != null">#{userId},</if>
            <if test="targetId != null">#{targetId},</if>
            <if test="time != null">#{time},</if>
            <if test="otherinfo != null">#{otherinfo},</if>
            <if test="type != null">#{type},</if>
            <if test="orderId != null">#{orderId},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Report">
        update report
        <set>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="money != null">
                money = #{money},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="targetId != null">
                target_id = #{targetId},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>