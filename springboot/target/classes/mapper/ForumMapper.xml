<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ForumMapper">

    <sql id="Base_Column_List">
        id,title,content,user_id,time,otherinfo,role
    </sql>

<!--    <select id="selectAll" resultType="com.example.entity.Records">-->
<!--        select-->
<!--        <include refid="Base_Column_List" />-->
<!--        from records-->
<!--        <where>-->

<!--        </where>-->
<!--        order by id desc-->
<!--    </select>-->
    <select id="selectAll" resultType="com.example.entity.Forum">
        select
        forum.*, user.username as userName
        from forum
        left join user
        on forum.user_id = user.id
        order by id asc
    </select>

    <select id="selectById" resultType="com.example.entity.Forum">
        select
        <include refid="Base_Column_List" />
        from forum
        where id = #{id}
    </select>

    <select id="selectByRole" resultType="com.example.entity.Forum">
        select
        <include refid="Base_Column_List" />
        from forum
        where role = #{role}
    </select>

    <delete id="deleteById">
        delete from forum
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Forum" useGeneratedKeys="true">
        insert into forum
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="title != null">title,</if>
            <if test="content != null">content,</if>
            <if test="userId != null">user_id,</if>
            <if test="time != null">time,</if>
            <if test="otherinfo != null">otherinfo,</if>
            <if test="role != null">role,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="title != null">#{title},</if>
            <if test="content != null">#{content},</if>
            <if test="userId != null">#{userId},</if>
            <if test="time != null">#{time},</if>
            <if test="otherinfo != null">#{otherinfo},</if>
            <if test="role != null">#{role},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Forum">
        update forum
        <set>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="otherinfo != null">
                otherinfo = #{otherinfo},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>